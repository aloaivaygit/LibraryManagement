@model IEnumerable<LibraryManagement.Models.Loan>
@{
    Layout = "_AdminLayout";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>


<center>
    <h2 style="padding-bottom: 20px">Danh sách người mượn sách</h2>
</center>
<div style="padding-bottom: 10px">
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</div>
<table class="table table-bordered table-striped table-hover" id="table-admin">
    <thead>
        <tr style="text-align:center">
            <th>ID</th>
            <th>Tên người mượn</th>
            <th>Sách</th>
            <th>Ngày mượn</th>
            <th>Ngày đến hạn</th>
            <th>Ngày hoàn trả</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model)
        {
            <tr>
                <td>@loan.LoanId</td>
                <td>@loan.UserId </td>
                <td>@loan.BookId </td>
        
                @* <td>@(loan.IsActive ? (loan.IsActive) : "N/A")</td> *@
                <td>
                    <div>
                        <a asp-action="Edit" asp-route-id="@loan.LoanId" class="btn">
                            <span class="material-symbols-outlined" style="margin-right: 10px">
                                edit
                            </span>
                        </a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@loan.LoanId" />
                            <button type="submit" class="btn" onclick="return confirm('Are you sure you want to delete this loan?')">
                                <span class="material-symbols-outlined">
                                    delete
                                </span>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
