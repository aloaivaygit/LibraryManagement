@model LibraryManagement.Models.Book

@{
    ViewData["Title"] = "Details";
}

<body>
    <div id="header-detail">
        <div class="line-container">
            <div class="line"></div>
            <div class="text">
                <center>
                    <h2>Thông tin chi tiết</h2>
                </center>
            </div>
            <div class="line"></div>
        </div>
    </div>
    <div class="detail-page">
        <div class="container-fluid">
            <div class="row" style="padding-top: 25px; width: 100%">

       
                    <div class="col" style="width:50%">
                        <img src="@(Model.Avatar)" height="600" style="border-radius:5px; padding-left: 200px;">
                    </div>

                    <div class="col" style="width: 30%">
                    <h2>@Model.Title</h2>
                    <p><b>Xuất bản năm:</b> @Model.PublishedYear</p>
                    <p><b>Nhà xuất bản:</b> @Model.Publisher</p>
                    <p><b>Giới thiệu:</b> @Model.Description</p>

                    <a asp-controller="Book" asp-action="ReadPdf" asp-route-id="@Model.BookId" class=" btn btn-success">Đọc sách online</a>
                    </div>
                
            </div>
        </div>
        
    </div>
</body>

