
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Page</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <!-- Boxicons CSS -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <script>
        function logout() {
            
            
            document.cookie = "jwt=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
           
            window.location.href = "/User/Login";
        }

    </script>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" onclick="logout()">Đăng xuất</a></li>

                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="wrapper" id="side-bar">
        <div class="sidebar">
            <ul>
                <li>
                    <a href="/Categories/Index">
                        <span class="material-symbols-outlined">
                            category
                        </span>Thể loại sách
                    </a>
                </li>
                <li>
                    <a href="/Authors/Index">
                        <span class="material-symbols-outlined">
                            face
                        </span>Tác giả
                    </a>
                </li>
                <li>
                    <a href="/Book/Index">
                        <span class="material-symbols-outlined">
                            view_timeline
                        </span>Sách
                    </a>
                </li>
                <li>
                    <a href="/Loan/Index">
                        <span class="material-symbols-outlined">
                            app_registration
                        </span>Thông tin mượn sách
                    </a>
                </li>
                <li>
                    <a href="/User/Index">
                        <span class="material-symbols-outlined">
                            manage_accounts
                        </span>Thông tin người dùng
                    </a>
                </li>
            </ul>
        </div>
        <div class="main_content">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="footer">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-md-12 col-xs-12">
                        <h2 class="footer-school-name">Thư viện số</h2>
                    </div>
                    <div class="col-lg-7 col-xs-12 mb-3">
                        <div class="footer-school-contact">
                            <div class="contact-item">
                                <span class="contact-text">
                                    Địa chỉ: 54A Nơ Trang Long, Phường 14, Quận Bình Thạnh, TP.HCM
                                </span>
                            </div>
                            <div class="contact-item">
                                <div class="d-none d-sm-block">
                                    <span>Điện thoại:</span>
                                    <span class="contact-text"> 0703 580 209</span>
                                </div>
                            </div>
                            <div class="contact-item">
                                <div class="d-none d-sm-block">
                                    <span>Email:</span>
                                    <span class="contact-text"> sales@vdoc.com.vn</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
