<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagement</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" href="/User/Login">Đăng nhập</a></li>
                        <li class="nav-item"><a class="nav-link" href="/User/SignUp">Đăng ký</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        @* @await Html.PartialAsync("_NavBarPartial") *@
       @*   <partial name="_NavBarPartial" /> *@
    </header>

    <main role="main" class="main_home">
        @RenderBody()
    </main>

    <footer>
        <div class="footer">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-md-12 col-xs-12">
                        <h2 class="footer-school-name">Thư viện số</h2>
                    </div>
                    <div class="col-lg-7 col-xs-12 mb-3">
                        <div class="footer-school-contact">
                            <div class="contact-item">
                                <span class="contact-text">
                                    Địa chỉ: 54A Nơ Trang Long, Phường 14, Quận Bình Thạnh, TP.HCM
                                </span>
                            </div>
                            <div class="contact-item">
                                <div class="d-none d-sm-block">
                                    <span>Điện thoại:</span>
                                    <span class="contact-text"> 0703 580 209</span>
                                </div>
                            </div>
                            <div class="contact-item">
                                <div class="d-none d-sm-block">
                                    <span>Email:</span>
                                    <span class="contact-text"> sales@vdoc.com.vn</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>