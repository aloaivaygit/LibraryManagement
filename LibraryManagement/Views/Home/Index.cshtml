
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>

    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in ViewBag.Carousels)
            {
                <div class="carousel-item @(Model.IndexOf(item) == 0 ? "active" : "")">
                    <img src="@item.ImageUrl" class="d-block w-100" />
                    <div class="carousel-caption">
                        <h3>@item.Title</h3>
                        <p>@item.Description</p>
                        @if (!string.IsNullOrEmpty(item.LinkUrl))
                        {
                            <a asp-action="Details" class="btn btn-primary">Learn more</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <br />
    <center>
        <h2 style="padding-bottom: 20px;">TÀI LIỆU SỐ SÁCH THAM KHẢO </h2>
    </center>
    <div class="row align-items-start">
        <div id="home_body_menu">
            <div class="row" , style="padding-left: 150px">
                @foreach (var book in ViewBag.Books)
                {
                    <div class="card" style="width: 18rem;padding-left: 12px">
                        <img src="@(book.Avatar)" class="card-img-top" alt="Sách giáo viên Toán 1 - Chân Trời Sáng Tạo" style="padding-top:10px; height:370.56px">
                        <div class="card-body">
                            <h5 class="card-title">@(book.Title)</h5>
                            <p class="card-text">@book.Description</p>
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" class="btn btn-primary">Đọc sách online</a>
                        </div>
                    </div>
                }
               
            </div>
        </div>
    </div>
</body>



